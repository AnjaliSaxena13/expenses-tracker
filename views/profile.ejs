                    </th>
                </tr>

                <% expenses.forEach((e)=>{ %>
                    <tr>
                        <td>
                            <%= e.createdAt %>
                        </td>
                        <td>
                            <%= e.amount %>
                        </td>
                        <td>
                            <%= e.category %>
                        </td>
                        <td>
                            <%= e.paymentmode %>
                        </td>
                        <td>
                            <%= e.remark%>
                        </td>
                        <td class="opt"> <a href="/delete/<%= e._id %>">Delete</a> &nbsp;
                            <a href="/update/<%= e._id %>">Update</a>
                        </td>
                    </tr>
                    <% }) %>

                        <!-- Add more rows as needed -->
            </table>
            <br>
        </div>


