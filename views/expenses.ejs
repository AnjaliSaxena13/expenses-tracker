<%- include("header.ejs")%>
    <link rel="stylesheet" href="/stylesheets/expense.css">

    <div class="addex">
        <h1> Add Your Expenses</h1> <br><br>
        <form action="/expenses" method="POST">
            <input type="number" name="amount" placeholder="Enter Amount" /> <br><br>
            <input type="text" name="remark" placeholder="Remark" /> <br><br>
            <input type="text" name="category" placeholder="Category" /> <br><br>
            <select name="paymentmode">
                <option value=""hidden disabled selected>Paymentmode</option>
                <option value="cash">Cash</option>
                <option value="online">Online</option>
                <option value="cheque">Cheque</option>
            </select> <br><br>

            <button>Add Expense</button> <br>
            or <a href="/profile">Back</a> 
        </form>
    </div>
